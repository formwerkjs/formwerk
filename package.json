{
  "name": "formwerk-mono-repo",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@9.10.0+sha256.355a8ab8dbb6ad41befbef39bc4fd6b5df85e12761d2724bd01f13e878de4b13",
  "homepage": "https://formwerk.dev",
  "repository": "https://github.com/formwerkjs/formwerk",
  "scripts": {
    "test": "vitest",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "tsx scripts/build.ts",
    "cover": "vitest run --coverage",
    "typecheck": "pnpm tsc --noEmit --project ./tsconfig.json --skipLibCheck",
    "docs:dev": "cd ./docs && pnpm dev && cd -",
    "postinstall": "husky install",
    "release": "./scripts/release.sh",
    "play:dev": "cd ./packages/playground && pnpm dev && cd -",
    "dev": "tsx scripts/watch.ts",
    "prepare": "husky",
    "ci:publish": "pnpm build && pnpm publish --provenance --access public -r",
    "ci:version": "pnpm changeset version && cp ./packages/core/CHANGELOG.md ./CHANGELOG.md",
    "get-tag": "tsx ./scripts/get-tag.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-typescript": "^12.1.0",
    "@testing-library/vue": "^8.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "@vue/compiler-dom": "^3.5.12",
    "consola": "^3.2.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "filesize": "^10.1.6",
    "flush-promises": "^1.0.2",
    "fs-extra": "^11.2.0",
    "globals": "^15.11.0",
    "gzip-size": "^7.0.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "pkg-pr-new": "^0.0.29",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "terser": "^5.34.1",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.9.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3",
    "vitest-axe": "1.0.0-pre.3",
    "vitest-dom": "^0.1.1",
    "vue": "^3.5.12"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run related --passWithNoTests"
    ],
    "*.js": [
      "eslint --fix",
      "vitest run related --passWithNoTests"
    ]
  },
  "keywords": [],
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT"
}
