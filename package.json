{
  "name": "formwerk-mono-repo",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "homepage": "https://formwerk.dev",
  "repository": "https://github.com/formwerkjs/formwerk",
  "scripts": {
    "test": "vitest",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "tsx scripts/build.ts",
    "cover": "vitest run --coverage",
    "postversion": "pnpm build",
    "typecheck": "pnpm tsc --noEmit --project ./tsconfig.json --skipLibCheck",
    "docs:dev": "cd ./docs && pnpm dev && cd -",
    "postinstall": "husky install",
    "release": "./scripts/release.sh",
    "play:dev": "cd ./packages/playground && pnpm dev && cd -",
    "dev": "tsx scripts/watch.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "consola": "^3.2.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "filesize": "^10.1.0",
    "fs-extra": "^11.2.0",
    "gzip-size": "^7.0.0",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.1.1",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "terser": "^5.26.0",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.7.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.2.2",
    "vue": "^3.3.11"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run related --passWithNoTests"
    ],
    "*.js": [
      "eslint --fix",
      "vitest run related --passWithNoTests"
    ]
  },
  "keywords": [],
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT"
}
