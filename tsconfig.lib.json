{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "target": "es2020",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@dev-tools": ["packages/dev-tools/src/index.ts"]
    }
  },
  "include": ["packages/*/src", "global.d.ts"],
  "exclude": ["packages/playground", "packages/test-utils", "**/*.spec.ts"]
}
